
#!/bin/bash
echo "What should I call the project?"
read project
mkdir $project
cd $project
# create the package.json file
curl -o package.json https://rawgit.com/dsmit192/mean_setup/master/package.json
# install node modules
npm install
mkdir client
cd client
# create the index file in the root of client directory
curl -o index.html https://rawgit.com/dsmit192/mean_setup/master/index.html
mkdir styles
cd styles
touch styles.css
#this coloring is to test the linking in index.html
echo "h3 { color: blue;}" >> styles.css
cd ..
mkdir partials
cd partials
# create the main partial to be displayed on index.html
curl -o main.html https://raw.githubusercontent.com/dsmit192/mean_setup/master/sources/main.html
cd ..
mkdir scripts
cd scripts
# create the 3 files from generic boilerplate hosted on github
curl -o app.js https://raw.githubusercontent.com/dsmit192/mean_setup/master/sources/app.js
curl -o factory.js https://raw.githubusercontent.com/dsmit192/mean_setup/master/sources/clientFactory.js
curl -o contoller.js https://raw.githubusercontent.com/dsmit192/mean_setup/master/sources/clientController.js
cd ../..
# end of client side, beginning server side
mkdir server
cd server/
mkdir config
mkdir controllers
mkdir models
curl -o server.js https://raw.githubusercontent.com/dsmit192/mean_setup/master/server.js
cd config
curl -o routes.js https://raw.githubusercontent.com/dsmit192/mean_setup/master/routes.js
touch moongoose.js
# echo is used here (rather than curl), because mongoose.js needs to take in variables
echo "var mongoose = require("mongoose");" >> mongoose.js
# database name is the same as the project
echo "mongoose.connect('mongodb://localhost/"$project"s');" >> mongoose.js
echo "" >> mongoose.js
echo "//requires every model" >> mongoose.js
# first model is the same name as the project
echo "require("../models/$project.js");"
cd ../controllers
curl -o $projects.js https://raw.githubusercontent.com/dsmit192/mean_setup/master/sampleServerController.js
cd ../models
curl -o $project.js https://raw.githubusercontent.com/dsmit192/mean_setup/master/sampleSchemas.js
cd ../..
timer=.1
sleep $timer && xdg-open http://localhost:8000/ &
nodemon server.js
